<div class="mx-auto w-1/2">
  <h2 class="text-4xl font-bold">
    Todos
  </h2>
  
  <%= turbo_frame_tag "todos-container", class: "mt-3 block max-w-2xl w-full bg-base-200 py-6 px-4 border rounded shadow-sm" do %>
    <div class="border-b bg-base-200 w-full mb-3">
      <ul class="flex space-x-2 justify-center">
        <li>
          <%= link_to "Incomplete",
            todos_path(status: "incomplete"),
            class: "inline-block py-4 px-4 text-sm font-medium" 
          %>
        </li>
        <li>
          <%= link_to "Complete",
            todos_path(status: "complete"),
            class: "inline-block py-4 px-4 text-sm font-medium"
          %>
        </li>
      </ul>
    </div>
    <% unless params[:status] == "complete" %>
      <div class="py-2 px-4">
        <%= render "form", todo: Todo.new %>
      </div>
    <% end %>
    
    <ul id="todos">
      <%= render @todos %>
    </ul>
  <% end %>
</div>

